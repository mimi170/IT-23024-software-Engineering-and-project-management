package com;

public class Human {
    private String name;
    private int age;

    // Constructor
    public Human(String name, int age) {
        this.name = name;
        this.age = age;
    }

    // Getter and Setter
    public String getName() {
        return name;
    }

    public void setName(String name) {
        this.name = name;
    }

    public int getAge() {
        return age;
    }

    public void setAge(int age) {
        this.age = age;
    }

    // Method
    public void speak() {
        System.out.println(name + " says: Hello!");
    }
}
